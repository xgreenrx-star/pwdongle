<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PWDongle Macro Recorder v2.0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />
        
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Not connected"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />
        
        <!-- Device Selection (shown when auto-connect is disabled) -->
        <LinearLayout
            android:id="@+id/deviceSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#FFF3E0"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select PWDongle Device:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <Spinner
                    android:id="@+id/deviceSpinner"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp" />
                
                <Button
                    android:id="@+id/connectButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Connect" />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:id="@+id/mousePositionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mouse: (0, 0)"
                android:textSize="14sp" />
            
            <TextView
                android:id="@+id/eventCountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Events: 0"
                android:textSize="14sp"
                android:gravity="end" />
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macro Filename:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        
        <EditText
            android:id="@+id/filenameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter macro name"
            android:inputType="text"
            android:layout_marginBottom="16dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Method:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        
        <Spinner
            android:id="@+id/inputMethodSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp" />
        
        <Button
            android:id="@+id/recordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Recording"
            android:textSize="18sp"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_marginBottom="16dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <Button
                android:id="@+id/filesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“ Files"
                android:layout_marginEnd="8dp" />
            
            <Button
                android:id="@+id/settingsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš™ï¸ Settings" />
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tips:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Connect to PWDongle first\nâ€¢ Choose input method (hardware or on-screen)\nâ€¢ Record macros with accurate timing\nâ€¢ Play them back anytime\nâ€¢ Share macros with others"
            android:textSize="11sp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
    
</FrameLayout>
