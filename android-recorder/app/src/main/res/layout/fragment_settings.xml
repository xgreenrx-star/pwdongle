<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundColor">
    
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/radio_text_color"
        android:layout_marginBottom="16dp" />
    
    <!-- Auto-Connect Settings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auto-Connect to PWDongle"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/radio_text_color" />
            
            <Switch
                android:id="@+id/autoConnectSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When enabled, the app will automatically search for and connect to PWDongle on startup. Disable to manually select from available devices."
            android:textSize="12sp"
                android:textColor="@color/radio_text_color"
                android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Theme Settings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/radio_text_color"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/themeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/themeSystemRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow System"
                android:textColor="@color/radio_text_color" />

            <RadioButton
                android:id="@+id/themeLightRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light"
                android:textColor="@color/radio_text_color" />

            <RadioButton
                android:id="@+id/themeDarkRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark"
                android:textColor="@color/radio_text_color" />
        </RadioGroup>
    </LinearLayout>
    
    <Button
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan for Devices"
        android:textColor="@color/radio_text_color"
        android:layout_marginBottom="16dp" />
    
    <Button
        android:id="@+id/liveControlButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ® Live Control (Real-time PC Input)"
        android:textColor="@color/radio_text_color"
        android:layout_marginBottom="16dp" />
        android:padding="8dp"
        android:background="@drawable/status_background"
        android:textColor="@color/radio_text_color"
        android:layout_marginBottom="16dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Devices:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/radio_text_color"
        android:layout_marginBottom="8dp" />
    
    <ListView
        android:id="@+id/devicesList"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording Settings:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/radio_text_color"
        android:layout_marginBottom="8dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:id="@+id/delayThresholdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delay Threshold: 50ms"
            android:textSize="12sp"
            android:textColor="@color/radio_text_color"
            android:layout_marginBottom="4dp" />
        
        <SeekBar
            android:id="@+id/delayThresholdSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="10"
            android:max="200"
            android:progress="50" />
    </LinearLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About PWDongle Recorder v2.0"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/radio_text_color"
                android:layout_marginBottom="8dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full-featured macro recorder with:\nâ€¢ Hardware USB OTG support\nâ€¢ On-screen keyboard\nâ€¢ On-screen touchpad\nâ€¢ Macro file management\nâ€¢ Playback with speed control\nâ€¢ Persistent storage\nâ€¢ Auto-connect to PWDongle"
                android:textSize="11sp"
                android:textColor="@color/radio_text_color"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
