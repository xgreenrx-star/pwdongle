<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundColor">
    
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macro Playback"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/radio_text_color"
        android:layout_marginBottom="16dp" />
    
    <TextView
        android:id="@+id/macroNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="18sp"
        android:textColor="@color/radio_text_color"
        android:layout_marginBottom="8dp" />
    
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Status: Ready"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#E0E0E0"
        android:textColor="@color/radio_text_color"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center_vertical" />
    
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0"
        android:layout_marginBottom="4dp"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/progressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playback Speed:"
            android:textSize="14sp"
            android:textColor="@color/radio_text_color"
            android:layout_marginEnd="8dp" />
        
        <Spinner
            android:id="@+id/speedSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <Button
            android:id="@+id/playButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="▶ Play"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />
        
        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⏹ Stop"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />
        
        <Button
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="← Back"
            android:textSize="16sp" />
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macro Content:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/radio_text_color"
        android:layout_marginBottom="8dp" />
    
    <ScrollView
        android:id="@+id/macroContentView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <TextView
            android:id="@+id/contentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading macro..."
            android:textSize="12sp"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:textColor="@color/radio_text_color"
            android:typeface="monospace" />
    </ScrollView>
    
</LinearLayout>
